<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Home Page</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-3">
      <h1><%= blog.title %></h1>
      <img src="<%= blog.coverImageURL %>" width="600px" />
      <p class="mt-3"><%= blog.body %></p>
    </div>
    <div class="container mt-3">
      <img
        src="<%= blog.createdBy.profileImageURL || '/images/default.png' %>"
        width="50px"
      />
      <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
      <h1>Comments (<%= comment.length %>)</h1>
      <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id %>" method="post">
        <div class="mb-3">
          <input
            type="text"
            name="content"
            class="form-control"
            placeholder="Enter your Comments..."
          />
          <button class="btn btn-sm btn-primary mt-2" type="submit">Add</button>
        </div>
      </form>
      <% } %>
      <div class="mt-3">
        <% comment.forEach(comment => { %>
        <div>
          <img src="<%= comment.createdBy.profileImageURL %>" width="25px" />
          <%= comment.createdBy.fullName %>
          <pre> <%= comment.content %></pre>
        </div>
        <% }) %>
      </div>
    </div>
    <%-include('./partials/scripts') %>
  </body>
</html>
